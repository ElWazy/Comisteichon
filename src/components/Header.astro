---
import "animate.css";
import Crown from  "./logos/Crown.astro";
---

<header class="justify-center mt-14 w-full p-2 flex h-screen">
    <div class="">
        <div class="text-center">
            <h1
                class="font-extrabold sm:text-9xl text-6xl font-dancing-script animate__animated animate__flash text-white"
            >
                Comisteichon
            </h1>

            <p class="text-lg leading-8 text-gray-600 bg-white mt-2">
                El arte de comer comia
            </p>
            <div class="flex flex-col">
                <a
                    href="/reflexion"
                    class="mt-8 block w-full rounded-full bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 animate__animated animate__fadeInRightBig"
                    >Reflexi√≥n semanal</a
                >
                <a
                    href="/merch"
                    class="mt-7 block w-full rounded-full bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 animate__animated animate__fadeInRightBig"
                    >Comprar Merch Oficial Comisteichon</a
                >
                <a
                    href="/inspector"
                    class="mt-7 block w-full rounded-full bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 animate__animated animate__fadeInRightBig"
                    >Contacto desarrolladores.</a
                >
                <a
                    href="/comiste"
                    class="mt-7 block w-full rounded-full bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 animate__animated animate__fadeInRightBig"
                    >Mas Info.</a
                >
                <a
                    href="/comiste"
                    class="mt-7 flex gap-2 justify-between w-full rounded-full bg-yellow-500 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-yellow-400 animate__animated animate__pulse animate__infinite infinite"
                >
                    <Crown />
                    Hall of Fame.
                    <Crown />
                </a>
            </div>

            <div class="text-sm font-light text-white mt-4">
                Made by Yuntas Team
            </div>
        </div>
    </div>
</header>
